{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "esModuleInterop": false,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "lib": ["es6", "es2015.promise", "es2018", "dom"],
    "types": ["@types/node", "@nuxt/vue-app"],
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    }
  },
  "files": ["server/globals.d.ts"],
  "include": ["**/*.ts", "**/*.vue", "server"],
  "exclude": ["node_modules", "dist"],
  "typeRoots": ["node_modules/@types"],
  "compileOnSave": true
}
