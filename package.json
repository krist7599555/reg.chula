    "@types/koa-bodyparser": "^4.2.2",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.0.40",
    "@types/koa2-cors": "^2.0.1",
    "@types/mongodb": "^3.1.25",
    "dotenv-extended": "^2.4.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-cookie": "^1.0.0",
    "koa-ignore": "^1.0.1",
    "koa-logger": "^3.2.0",
    "koa-mongo": "^1.8.0",
